{
  "name": "autodeploy-gui",
  "version": "1.0.0",
  "description": "AutoDeploy GUI - Electron + React application",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"pnpm start\" \"wait-on http://localhost:5173 && electron .\"",
    "build:electron": "pnpm build && electron-builder",
    "dist": "electron-builder"
  },
  "keywords": ["deployment", "automation", "gui", "electron"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "axios": "^1.6.3",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.10.3",
    "framer-motion": "^10.16.16",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "fuse.js": "^7.0.0"
  },
  "build": {
    "appId": "com.autodeploy.app",
    "productName": "AutoDeploy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}